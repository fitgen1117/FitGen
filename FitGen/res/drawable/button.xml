<?xml version="1.0" encoding="utf-8"?> 
  <selector xmlns:android="http://schemas.android.com/apk/res/android"
      		android:drawable="@color/pressed_fitgen"> 
      <item android:state_pressed="true"
          android:drawable="@color/pressed_fitgen" >
      
      	<shape
      	    android:shape="rectangle" >
      	    
           <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        	</shape>
        </item>
           
          
      <item android:state_focused="true"
          android:drawable="@color/pressed_fitgen" >
           
           <shape
               android:shape="rectangle" >
      	    
           <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        	</shape>
        </item>
           
           
		 
      <item android:drawable="@color/white" />
      
</selector>